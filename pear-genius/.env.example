# Pear Genius - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# Required: Anthropic API Key
# ============================================
ANTHROPIC_API_KEY=sk-ant-...

# ============================================
# Model Configuration
# ============================================
MODEL_NAME=claude-sonnet-4-20250514
MAX_TOKENS=4096
TEMPERATURE=0.7

# ============================================
# AgentGateway Configuration
# ============================================
# URL where AgentGateway is running (provides MCP tools)
AGENT_GATEWAY_URL=http://localhost:3000

# ============================================
# Keycloak Configuration (Optional)
# ============================================
# Required for authenticated customer sessions
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=pear-computer
KEYCLOAK_CLIENT_ID=pear-genius

# ============================================
# Business Rules
# ============================================
# Maximum refund amount before escalation to human agent
MAX_REFUND_AMOUNT=500.0

# Maximum conversation turns before requiring escalation
MAX_CONVERSATION_TURNS=20

# ============================================
# Logging & Debug
# ============================================
DEBUG=true
LOG_LEVEL=INFO
